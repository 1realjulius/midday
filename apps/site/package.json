{
  "name": "@midday/site",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "pnpm with-env next build",
    "clean": "git clean -xdf .next .turbo node_modules",
    "dev": "pnpm with-env next dev",
    "lint": "dotenv -v SKIP_ENV_VALIDATION=1 next lint",
    "lint:fix": "pnpm lint --fix",
    "start": "pnpm with-env next start",
    "check:types": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.1",
    "@midday/email": "workspace:*",
    "@t3-oss/env-nextjs": "^0.6.1",
    "next": "^13.4.19",
    "next-international": "^1.0.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.46.1",
    "superjson": "1.13.1",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@midday/eslint": "workspace:*",
    "@midday/tailwind": "workspace:*",
    "@midday/tsconfig": "workspace:*",
    "@types/node": "^20.6.2",
    "@types/react": "^18.2.22",
    "@types/react-dom": "^18.2.7",
    "autoprefixer": "^10.4.15",
    "dotenv-cli": "^7.3.0",
    "encoding": "^0.1.13",
    "eslint": "^8.49.0",
    "postcss": "^8.4.29",
    "tailwindcss": "3.3.3",
    "typescript": "^5.2.2"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@midday/eslint/base",
      "@midday/eslint/nextjs",
      "@midday/eslint/react"
    ]
  }
}
