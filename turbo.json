{
	"$schema": "https://turborepo.org/schema.json",
	"globalDependencies": ["**/.env"],
	"pipeline": {
		"topo": {
			"dependsOn": ["^topo"]
		},
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".next/**", "!.next/cache/**", "next-env.d.ts", ".expo/**"]
		},
		"start": {
			"cache": false
		},
		"dev": {
			"persistent": true,
			"cache": false
		},
		"format": {
			"outputMode": "new-only"
		},
		"lint": {
			"dependsOn": ["^topo"]
		},
		"typecheck": {
			"dependsOn": ["^topo"],
			"outputs": ["node_modules/.cache/tsbuildinfo.json"]
		},
		"clean": {
			"cache": false
		},
		"//#clean": {
			"cache": false
		}
	},
	"globalEnv": [
		"POSTGRES_URL",
		"NEXTAUTH_SECRET",
		"NEXTAUTH_URL"
	]
}
